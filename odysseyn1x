#!/bin/bash
export NEWT_COLORS='root=,black border=white,black window=white,black title=white,black textbox=white,black listbox=white,black'
while true; do
  CHOICE=$(whiptail --nocancel --title "Odysseyn1x" --menu "" 12 40 5 \
    "1" "Checkra1n"   \
    "2" "Odysseyra1n"  \
    "3" "Setup Project Sandcastle" \
    "4" "Start Android" \
    "5" "Shut down" \
    "6" "Reboot" \
    "7" "Exit" 3>&1 1>&2 2>&3)
  case $CHOICE in
    1)
      clear
      /usr/bin/checkra1n
      ;;
    2)
      clear
      echo 'Connect an iDevice to this computer'
      read -p 'Press enter to continue'
      clear
      cd /root/
      /usr/bin/odysseyra1n
      echo 'Open Sileo, do all the updates and install libhooker package.'
      echo 'Then reboot manually, and re-jailbreak.'
      echo '/!\ OpenSSH is installed by default. Please change the root password to prevent the possibility of unsavory people remotely logging into your device using the default password.'
      read -p 'Press enter to quit'
      ;;
    3)
      /usr/bin/setup_sandcastle
      ;;
    4)
      /usr/bin/start_sandcastle
      ;;
    5)
      /usr/sbin/shutdown now
      ;;
    6)
      /usr/sbin/reboot
      ;;
    7)
      clear
      break
      ;;
  esac
done
